<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/scoreboard_inactive_icon_size"
            android:layout_height="@dimen/scoreboard_inactive_icon_size"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/_dummy_player_name"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="@dimen/scoreboard_inactive_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/_dummy_number"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/scoreboard_inactive_text_size" />

</FrameLayout>
